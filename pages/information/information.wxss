page {
  height: 100%;
}

.left {
  width: 30%;
  background: rgb(245, 245, 245);
  height: 100%;
  overflow: scroll;
  position: relative;
  float: left;
  -webkit-overflow-scrolling: touch;
}

.left::after {
  content: '';
  position: absolute;
  width: 1px;
  height: 100%;
  right: 0;
  top: 0;
  background: rgb(240, 240, 240);
}

.left .list {
  width: 100%;
  height: 40px;
  font-size: 15px;
  line-height: 40px;
  text-align: center;
  color: #333;
}
.left .list:first-child{
  background: #fff;
}

.left::-webkit-scrollbar {
  display: none;
}

.right {
  width: 70%;
  float: right;
  height: 100%;
}
swiper {
    width: 100%;
    height: 100% ;
  }
  
  swiper-item {
    width: 100%;
    height: 100%;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
  }
  
  swiper-item::-webkit-scrollbar {
    display: none;
  }
.right .infoTitle {
    width: 100%;
  height: 40px;
  background: #eee;
  border-bottom: 1px solid rgb(226, 226, 226);
  text-indent: 10px;
  line-height: 40px;
  font-size: 15px;
}

.right view {
  width: 100%;
}

.right .classBlock {
  font-size: 14px;
  width: 100%;
  position: relative;
}
.right .cover{
    width: 100%;
}
.right .rightInfo{
  width: 100%;
  text-align: center;
}
.rightInfo h2{
  font-size: 1rem;
  display: block;
}
.rightInfo j3{
  display: block;
  font-size: .8rem;
}
.rightInfo text{
  display: block;
}
.story{
  position: absolute;
  top: -10px;
  width: 90%;
  height: 100%;
  text-indent: 1.4rem;
  font-size: .7rem;
  line-height: 1.5rem;
  padding: 1rem;
  display: block;
  word-break: break-all;
}

.actorImg{
  width: 50%;
  display: inline-block;
}
.actorInfo{
  width: 50%;
  text-align: center;
  font-size: .8rem;
  display: inline-block;
  margin: 10px;
}
.actorInfo text{
  display: block;
}
.boxOffice{
  width: 100%;
  text-align: center;
  font-size: .7rem;
  line-height: 1.5rem;
}
.noData{
  font-size: .7rem;
  text-indent: 10px;
}
.person-type{
  display: block;
  width: 100%;
  font-size: .6rem;
  color: #333;
  height: 1rem;
  line-height: 1.5rem;
  text-indent: 10px;
  padding-bottom: 10px;
  border-bottom: .8px  rgb(168, 168, 168);
}
.person-type span{
  font-size: .5rem;
}
.plus,.mini{
  font-size: .7rem;
  text-indent: 10px;
  width: 100%;
  margin-top: 10px;
  margin-bottom: 20px;
  padding-bottom: 5px;
  border-bottom: 1px solid rgb(56, 56, 56);
  color: rgb(56, 56, 56);
  position: relative;
}
.plusComment,.miniComment{
  width: 100%;
  position: relative;
}
.comments .more{
  display: block;
  width: 2rem;
  height: 1rem;
  position: absolute;
  right: 10px;
  line-height: 1rem;
  font-size: .7rem;
  white-space: nowrap;
  color: rgb(165, 164, 164);
  top: 50%;
  margin-top: -.5rem;
}
.comments text{
  display: block;
}
.userArea{
  position: relative;
  height: 50px;
  border-top: 1px solid rgb(253, 240, 240);
  padding:5px 0 ;
}
.comments .nickName{
  position: absolute;
  font-size: 14px;
  word-break: break-all;
  left: 80px;
  color: dodgerblue;
}
.comments .userImg{
  position: absolute;
  left: 10px;
  width: 50px;
  height: 50px;
}
.comments .commentTitle{
  width: 100%;
  font-size: .8rem;
  text-align: center;
  display: block;
  margin-bottom: 5px;
  font-weight: 800;
}
.comments .content{
  width: 90%;
  padding: 1rem;
  line-height: 1rem;
  font-size: .7rem;
  margin-bottom: 1rem;
  padding-bottom: .5rem;
  border-bottom: 1px solid rgb(253, 240, 240);

}
.noComment{
  text-indent: 10px;
}

