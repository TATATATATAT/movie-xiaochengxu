.plusComment{
    width: 100%;
    position: relative;
  }
  .comments text{
    display: block;
  }
  .userArea{
    position: relative;
    height: 50px;
    border-top: .8px solid rgb(253, 240, 240);
    padding:5px 0 ;
  }
  .comments .nickName{
    position: absolute;
    font-size: 14px;
    word-break: break-all;
    left: 80px;
    color: dodgerblue;
  }
  .comments .userImg{
    position: absolute;
    left: 10px;
    width: 50px;
    height: 50px;
  }
  .comments .commentTitle{
    width: 100%;
    font-size: .8rem;
    text-align: center;
    display: block;
    margin-bottom: 5px;
    font-weight: 800;
  }
  .comments .content{
    width: 90%;
    padding: 1rem;
    line-height: 1rem;
    font-size: .7rem;
    margin-bottom: 1rem;
    padding-bottom: .5rem;
    border-bottom: 1px solid #eee;
  }
  .content:first-letter{
    font-size:1rem;
    color:rgb(56, 130, 228);
  }

  .noComment{
    text-indent: 10px;
  }
  
  